{
  "name": "@d5/tgs-player",
  "version": "0.1.0",
  "description": "Minimal TGS/Lottie to standalone SVG animation converter",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./runtime": {
      "import": "./dist/runtime/index.js",
      "types": "./dist/runtime/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "convert": "node --loader ts-node/esm src/cli.ts"
  },
  "dependencies": {
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pako": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "tgs",
    "lottie",
    "telegram",
    "sticker",
    "svg",
    "animation"
  ],
  "license": "MIT"
}
